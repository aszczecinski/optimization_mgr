CREATE TABLE "FAKTURA"
 ( "ID" NUMBER(10,0) NOT NULL,
 "ID_KLIENT" NUMBER(10,0) NOT NULL,
 "ID_ZAMOWIENIA" NUMBER(10, 0) NOT NULL,
 "NAZWA_KLIENTA" VARCHAR2(500) NOT NULL,
 "NR_FAKTURY" VARCHAR2(100) NOT NULL,
 "DATA_WYSTAWIENIA" DATE,
 "DATA_PLATNOSCI" DATE,
 "DATA_WYKONANIA_USLUGI" DATE,
 "OPIS" VARCHAR2(500),
 CONSTRAINT PK_FAKT PRIMARY KEY (ID),
 FOREIGN KEY FK_FAKT_ZAM (ID_ZAMOWIENIA)
 REFERENCES "ZAMOWIENIE"(ID)
 ) ;

 COMMENT ON COLUMN "FAKTURA"."ID" IS 'ID faktury';
 COMMENT ON COLUMN "FAKTURA"."ID_KLIENT" IS 'ID klienta';
 COMMENT ON COLUMN "FAKTURA"."ID_KLIENT" IS 'ID zamówienia, na podstawie którego wystawiana jest faktura';
 COMMENT ON COLUMN "FAKTURA"."NAZWA_KLIENTA" IS 'Nazwa klienta widoczna na fakturze';
 COMMENT ON COLUMN "FAKTURA"."NR_FAKTURY" IS 'Numer faktury';
 COMMENT ON COLUMN "FAKTURA"."DATA_WYSTAWIENIA" IS 'Data wystawienia faktury';
 COMMENT ON COLUMN "FAKTURA"."DATA_PLATNOSCI" IS 'Data płatności';
 COMMENT ON COLUMN "FAKTURA"."DATA_WYKONANIA_USLUGI" IS 'Data wykonania usługi';
 COMMENT ON COLUMN "FAKTURA"."OPIS" IS 'Dodatkowy opis do faktury';

 COMMENT ON TABLE "FAKTURA" IS 'Tabela przechowuje dane faktury';
