CREATE TABLE "ZAMOWIENIE"
 ( "ID" NUMBER(10,0) NOT NULL,
 "ID_KLIENT" NUMBER(10,0) NOT NULL,
 "ID_FAKTURA" NUMBER(10,0),
 "DATA_UTWORZENIA" DATE,
 "DATA_WYSLANIA" DATE,
 "OPIS" VARCHAR2(500),
 CONSTRAINT PK_ZAM PRIMARY KEY (ID)
 ) ;

 COMMENT ON COLUMN "ZAMOWIENIE"."ID" IS 'ID zamówienia';
 COMMENT ON COLUMN "ZAMOWIENIE"."ID_KLIENT" IS 'ID klienta';
 COMMENT ON COLUMN "ZAMOWIENIE"."ID_FAKTURA" IS 'ID faktury';
 COMMENT ON COLUMN "ZAMOWIENIE"."DATA_UTWORZENIA" IS 'Data utworzenia zamówienia';
 COMMENT ON COLUMN "ZAMOWIENIE"."DATA_WYSLANIA" IS 'Data wysłania zamówienia';
 COMMENT ON COLUMN "ZAMOWIENIE"."OPIS" IS 'Dodatkowy opis do zamówienia';

 COMMENT ON TABLE "ZAMOWIENIE" IS 'Tabela przechowuje dane zamówienia';