CREATE TABLE "KLIENT"
 ( "ID" NUMBER(10,0) NOT NULL ENABLE,
 "ULICA_NUMER" VARCHAR2(200) NOT NULL ENABLE,
 "KOD_MIASTO" VARCHAR2(6) NOT NULL ENABLE,
 "MIASTO" VARCHAR2(200) NOT NULL ENABLE,
 "NIP" NUMBER(10,0),
 "REGON" NUMBER(9,0),
 "DATA_UTWORZENIA" DATE NOT NULL ENABLE,
 "DATA_MODYFIKACJI" DATE,
 CONSTRAINT PK_KLIENT PRIMARY KEY (ID)
 ) ;

 COMMENT ON COLUMN "KLIENT"."ID" IS 'ID klienta';
 COMMENT ON COLUMN "KLIENT"."ULICA_NUMER" IS 'Ulica oraz numer klienta';
 COMMENT ON COLUMN "KLIENT"."KOD_MIASTO" IS 'Kod pocztowy (format XXXXX)';
 COMMENT ON COLUMN "KLIENT"."MIASTO" IS 'Nazwa miasta, w którym klient prowadzi działalność';
 COMMENT ON COLUMN "KLIENT"."NIP" IS 'NIP klienta';
 COMMENT ON COLUMN "KLIENT"."REGON" IS 'REGON klienta';
 COMMENT ON COLUMN "KLIENT"."DATA_UTWORZENIA" IS 'Data dodania klienta do bazy';
 COMMENT ON COLUMN "KLIENT"."DATA_MODYFIKACJI" IS 'Data modyfikacji danych klienta';

 COMMENT ON TABLE "KLIENT" IS 'Tabela przechowuje dane klienta';